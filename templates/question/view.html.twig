            <h1>{{ question.question }}</h1>
            <p class="text-muted">Asked by: {{ question.user.name }}</p>
            {% if question.likes != null %}
                <p>üëçüèª {{ question.likes }}</p>
            {% endif %}
        </div>
        <div>
