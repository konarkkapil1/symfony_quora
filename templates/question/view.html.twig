{% extends 'base.html.twig' %}

{% block title %}
    {{ question.question|slice(0,10) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div style="border: 1px solid lightgrey; border-radius: 8px;padding: 5px">
            <h1>{{ question.question }}</h1>
            <p class="text-muted">Asked by: {{ question.user.name }}</p>
            {% if question.likes != null %}
                <p>üëçüèª {{ question.likes }}</p>
            {% endif %}
        </div>
        <div style="margin-top: 20px">
            <h3>Answers: </h3>
            {% if question.answers == null %}
                <p>No Answers yet</p>
            {% endif %}
            {% for answer in question.answers.snapshot %}
                <div style="padding: 5px; border-top: 1px solid lightgrey; border-bottom: 1px solid lightgrey">
                    <h5>{{ answer.answer }}</h5>

                    <p class="text-muted">{{ answer.user.name }}</p>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}